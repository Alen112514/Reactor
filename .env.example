# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/mcp_router
REDIS_URL=redis://localhost:6379
WEAVIATE_URL=http://localhost:8080

# API Configuration
API_PORT=8000
API_HOST=0.0.0.0
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# External Services
OPENAI_API_KEY=sk-your-openai-api-key
COHERE_API_KEY=your-cohere-api-key
HUGGINGFACE_API_KEY=your-huggingface-api-key

# Monitoring
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
PROMETHEUS_ENDPOINT=http://localhost:9090

# Application Configuration
NODE_ENV=development
LOG_LEVEL=info

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000

# Cost Guardrails
DEFAULT_DAILY_BUDGET=100.00
DEFAULT_MONTHLY_BUDGET=1000.00
TOKEN_COST_PER_1K_GPT4=0.03
TOKEN_COST_PER_1K_GPT3=0.002

# Tool Indexing
INDEXING_SCHEDULE=0 */6 * * *  # Every 6 hours
MAX_PARALLEL_CONNECTIONS=10
TOOL_CACHE_TTL=3600  # 1 hour

# Semantic Router
DEFAULT_K_VALUE=5
SIMILARITY_THRESHOLD=0.7
CONFIDENCE_THRESHOLD=0.8

# Execution Planner
MAX_PARALLEL_TOOLS=10
DEFAULT_TIMEOUT_MS=30000
MAX_RETRY_ATTEMPTS=3

# Self Evaluation
EVALUATION_SCHEDULE=0 2 * * *  # Daily at 2 AM
REPLAY_SAMPLE_SIZE=100
THRESHOLD_UPDATE_FREQUENCY=weekly